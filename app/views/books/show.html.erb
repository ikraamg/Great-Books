<h2>
  <strong class= 'orange'><%= @book.title %></strong>
</h2>
<%= show_links %>
</br>
<p>
<strong class="text-muted"><%= vote_or_unvote_btn(@book) %> </strong>

<strong>Total Votes: <%=[@book.votes.size] %></strong>
</p>
</br>
<h5>
  <strong class="orange">Author:</strong>
  <%= @book.user.name %>
</h5>

<p>
  <strong>Story:</strong>
  <br>
  <%= @book.text %>
</p>

<p>
  <%= image_tag(@book.photo, width: 500) if @book.photo.attached? %>
</p>
